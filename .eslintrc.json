{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "plugin:chai-friendly/recommended",
    "eslint:recommended",
    "plugin:cypress/recommended",
    "plugin:sonarjs/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": [
    "ie11",
    "import",
    "jsx-a11y",
    "node",
    "sonarjs",
    "promise"
  ],
  "root": true,
  "rules": {
    "cypress/assertion-before-screenshot": "error",
    "ie11/no-collection-args": [
      "error"
    ],
    "ie11/no-for-in-const": [
      "error"
    ],
    "ie11/no-loop-func": [
      "warn"
    ],
    "ie11/no-weak-collections": [
      "error"
    ]
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
